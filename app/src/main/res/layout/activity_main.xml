<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E5E5E5">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="@string/my_apps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Large" />

    <Button
        android:text="Spotify Streamer"
        android:id="@+id/spotify_streamer_button"
        android:layout_marginTop="42dp"
        style="@style/buttonsInPortfolio"/>

    <Button
        android:text="Scores App"
        android:id="@+id/scores_app_button"
        android:layout_below="@+id/spotify_streamer_button"
        android:layout_alignStart="@+id/spotify_streamer_button"
        style="@style/buttonsInPortfolio"/>

    <Button
        android:text="Library App"
        android:id="@+id/library_app_button"
        android:layout_below="@+id/scores_app_button"
        style="@style/buttonsInPortfolio"/>

    <Button
        android:text="Build it bigger"
        android:id="@+id/build_it_bigger_button"
        android:layout_below="@+id/library_app_button"
        style="@style/buttonsInPortfolio"/>

    <Button
        android:text="XYZ Reader"
        android:id="@+id/xyz_reader_button"
        android:layout_below="@+id/build_it_bigger_button"
        style="@style/buttonsInPortfolio" />

    <Button
        android:text="Capstone: MY OWN IDEA"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/xyz_reader_button"
        style="@style/buttonsInPortfolio.Capstone" />


</RelativeLayout>
</ScrollView>